 .container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.scrolltxt {
  padding: 0 20rpx;
  background: #f8f8f8;
} 


.marquee_box {
  position: relative;
  color: #333;
  height: 90rpx;
  display: block;
  overflow: hidden;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  font-size: 14px;
  height: 90rpx;
  line-height: 90rpx;
}

page {
  width: 100%;
  height: 100%;
  background-color: yellow;
}

.circle-box {
  position: relative;
  left: 20px;
  top: 20px;
}
.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

